{
    "manifest_version": 3,
    "name": "Monstah YouTube Search Bar",
    "version": "1.2.0",
    "description": "Adds a YouTube search bar to the Chrome toolbar.",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Monstah YouTube Search",
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]
  }
  